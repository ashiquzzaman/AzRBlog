<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Author Meta -->
    <meta name="author" content="codepixer">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Ruft Blog</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500|Rubik:500" rel="stylesheet">
    <!--
    CSS
    ============================================= -->
    <link rel="stylesheet" href="/Themes/Blog/css/linearicons.css">
    <link rel="stylesheet" href="/Themes/Blog/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Themes/Blog/css/bootstrap.css">
    <link rel="stylesheet" href="/Themes/Blog/css/magnific-popup.css">
    <link rel="stylesheet" href="/Themes/Blog/css/nice-select.css">
    <link rel="stylesheet" href="/Themes/Blog/css/animate.min.css">
    <link rel="stylesheet" href="/Themes/Blog/css/owl.carousel.css">
    <link rel="stylesheet" href="/Themes/Blog/css/main.css">
</head>

<body>
    <!--================ Start header Top Area =================-->
    <section class="header-top">
        <div class="container box_1170">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <a href="@Url.Action("Index","Home",new{area=""})" class="logo">
                        <img src="/Themes/Blog/img/logo.png" alt="">
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 search-trigger">
                    <a href="#" class="search">
                        <i class="lnr lnr-magnifier" id="search"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!--================ End header top Area =================-->
    <!-- Start header Area -->
    <header id="header">
        <div class="container box_1170 main-menu">
            <div class="row align-items-center justify-content-center d-flex">
                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li class="menu-active">
                            <a href="@Url.Action("Index","Home",new{area=""})">Home</a>
                        </li>
                        <li><a href="@Url.Action("Index","Blog",new{area=""})">Category</a></li>
                        <li><a href="@Url.Action("Index","Blog",new{area=""})">Archive</a></li>


                        <li><a href="@Url.Action("Contact","Home",new{area=""})">Contact</a></li>

                        @if (!Request.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("Register","Account",new{area=""})">Register</a></li>
                            <li><a href="@Url.Action("Login","Account",new{area=""})">Login</a></li>
                        }
                        else
                        {
                            <li class="menu-has-children">
                                <a href="">My Account</a>
                                <ul>
                                    <li>
                                        <a href="@Url.Action("Index","Dashboard",new{area=""})">
                                            Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:document.getElementById('logoutForm').submit()">
                                            Sign Out
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>
                </nav>
            </div>
        </div>

        <div class="search_input" id="search_input_box">
            <div class="container box_1170">
                <form class="d-flex justify-content-between">
                    <input type="text" class="form-control" id="search_input" placeholder="Search Here">
                    <button type="submit" class="btn"></button>
                    <span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
                </form>
            </div>
        </div>
    </header>
    <!-- End header Area -->


    @RenderBody()

    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container box_1170">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">About Us</h6>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore dolore
                            magna aliqua.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">Newsletter</h6>
                        <p>Stay updated with our latest trends</p>
                        <div id="mc_embed_signup">
                            <form target="_blank" action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01"
                                  method="get" class="subscribe_form relative">
                                <div class="input-group d-flex flex-row">
                                    <input name="EMAIL" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address '"
                                           required="" type="email">
                                    <button class="btn sub-btn"><span class="lnr lnr-arrow-right"></span></button>
                                </div>
                                <div class="mt-10 info"></div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-footer-widget instafeed">
                        <h6 class="footer_title">Instagram Feed</h6>
                        <ul class="list instafeed d-flex flex-wrap">
                            <li><img src="/Themes/Blog/img/i1.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i2.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i3.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i4.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i5.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i6.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i7.jpg" alt=""></li>
                            <li><img src="/Themes/Blog/img/i8.jpg" alt=""></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6">
                    <div class="single-footer-widget f_social_wd">
                        <h6 class="footer_title">Follow Us</h6>
                        <p>Let us be social</p>
                        <div class="f_social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-dribbble"></i></a>
                            <a href="#"><i class="fa fa-behance"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row footer-bottom d-flex justify-content-between align-items-center">
                <p class="col-lg-12 footer-text text-center">
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script>
                    All rights reserved 
                    <i class="fa fa-heart-o" aria-hidden="true"></i> by 
                    <a href="https://stackoverflow.com/users/3557266/ashiquzzaman" target="_blank">AzR</a>
                </p>
            </div>
        </div>
    </footer>
    <!-- End footer Area -->
@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })){@Html.AntiForgeryToken()}

    <script src="/Themes/Blog/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="/Themes/Blog/js/vendor/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>
    <script src="/Themes/Blog/js/easing.min.js"></script>
    <script src="/Themes/Blog/js/hoverIntent.js"></script>
    <script src="/Themes/Blog/js/superfish.min.js"></script>
    <script src="/Themes/Blog/js/jquery.ajaxchimp.min.js"></script>
    <script src="/Themes/Blog/js/jquery.magnific-popup.min.js"></script>
    <script src="/Themes/Blog/js/owl.carousel.min.js"></script>
    <script src="/Themes/Blog/js/jquery.tabs.min.js"></script>
    <script src="/Themes/Blog/js/jquery.nice-select.min.js"></script>
    <script src="/Themes/Blog/js/waypoints.min.js"></script>
    <script src="/Themes/Blog/js/mail-script.js"></script>
    <script src="/Themes/Blog/js/main.js"></script>


    @RenderSection("scripts", required: false)
</body>

</html>